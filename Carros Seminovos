<div class="box">
  <h3>Atendimento Hyundai</h3>

  <input id="nome" placeholder="Seu nome">
  <input id="orcamento" placeholder="Orçamento">
  
  <select id="preferencia">
    <option>Automático</option>
    <option>Manual</option>
  </select>

  <textarea id="msg" placeholder="Mensagem"></textarea>

  <button onclick="enviar()">Enviar WhatsApp</button>
</div>

<script>
function enviar() {
  const nome = document.getElementById('nome').value;
  const orc = document.getElementById('orcamento').value;
  const pref = document.getElementById('preferencia').value;
  const msg = document.getElementById('msg').value;

  const texto = `Olá, meu nome é ${nome}. Orçamento: ${orc}. Preferência: ${pref}. Mensagem: ${msg}`;
  const numero = '5546999725441';
  const url = `https://wa.me/${numero}?text=${encodeURIComponent(texto)}`;

  window.location.href = url;
}
</script>

